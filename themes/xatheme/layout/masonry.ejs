<div class="masonry-page">
  <div class="page-header">
    <h1 class="page-title"><%= page.title %></h1>
  </div>

  <div class="masonry-grid">
    <% const items = (site && site.data && site.data.masonry) ? site.data.masonry : []; %>
    <% if (items.length === 0) { %>
      <p>No items found. Add items in <code>source/_data/masonry.yml</code>.</p>
    <% } else { %>
      <% items.forEach(function(item) { %>
        <div class="masonry-card">
          <div class="masonry-image">
            <img src="<%= item.image %>" alt="<%= item.title || '' %>" loading="lazy">
          </div>
          <div class="masonry-content">
            <% if (item.title) { %>
              <div class="masonry-title"><%= item.title %></div>
            <% } %>
            <% if (item.description) { %>
              <div class="masonry-description"><%= item.description %></div>
            <% } %>
          </div>
        </div>
      <% }); %>
    <% } %>
  </div>
</div>